/* Error State */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: #D81E06;
}

.error-text {
  font-size: 30rpx;
  color: var(--color-ink);
  margin-bottom: 40rpx;
}

.retry-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: var(--color-ink);
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
}
