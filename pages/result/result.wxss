.container {
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Loading & Error States */
.loading-state, .error-state {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #ddd;
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.error-text {
  color: #F76260;
  font-size: 32rpx;
}

.retry-btn {
  background-color: var(--primary-color);
  color: #fff;
  width: 200rpx;
  font-size: 28rpx;
}

/* Result Content */
.result-content {
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 20rpx;
}

.symbol {
  font-size: 140rpx;
  line-height: 1;
  color: #333;
}

.name {
  font-size: 56rpx;
  font-weight: bold;
  margin-top: 20rpx;
  color: var(--text-main);
  letter-spacing: 4rpx;
}

.card {
  background: #fff;
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 20rpx;
  display: block;
  border-left: 8rpx solid var(--primary-color);
  padding-left: 16rpx;
}

.card-body {
  font-size: 30rpx;
  color: var(--text-main);
  line-height: 1.7;
  text-align: justify;
  display: block;
}

.highlight {
  background-color: #FFFDF8; /* Slight warm tint */
  border: 1rpx solid #F0E6D2;
}

.sub-card {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #eee;
}

.sub-title {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.back-btn {
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  background-color: transparent;
  border: 2rpx solid #ccc;
  color: #666;
  font-size: 30rpx;
  border-radius: 48rpx;
}

.btn-hover {
  background-color: #f0f0f0;
}
