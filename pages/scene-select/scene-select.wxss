/* pages/scene-select/scene-select.wxss */
.container {
  padding: 0;
  /* Deep Mist Gradient: Dark Jade to Lighter Mist */
  background: radial-gradient(circle at 50% 30%, #e0e6e4, #a8c0bb, #2c5f58); 
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  z-index: 10;
  text-shadow: 0 2rpx 4rpx rgba(255,255,255,0.5);
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: var(--color-jade); /* Dark Jade Title */
  letter-spacing: 8rpx;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: var(--color-ink-light); /* Darker subtitle for contrast */
  opacity: 0.8;
  display: block;
  font-weight: 300;
  letter-spacing: 4rpx;
}

/* Wheel Context */
.wheel-area {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -40rpx; 
}

.bagua-wheel {
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  position: relative;
  
  /* Jade Texture & Glassmorphism */
  background: rgba(255, 255, 255, 0.1); /* Subtle glass base */
  border: 4rpx solid rgba(203, 167, 99, 0.3); /* Faint Gold Border */
  box-shadow: 
    0 0 40rpx rgba(44, 95, 88, 0.2), /* Jade Glow */
    inset 0 0 60rpx rgba(255, 255, 255, 0.2); /* Inner Light */
    
  backdrop-filter: blur(10px); /* Glass Blur */
}

/* Inner Jade Ring (The solid part) */
.bagua-wheel::after {
  content: '';
  position: absolute;
  top: 40rpx; left: 40rpx; right: 40rpx; bottom: 40rpx;
  border-radius: 50%;
  border: 20rpx solid rgba(44, 95, 88, 0.15); /* Thick Jade Ring */
  pointer-events: none;
}

/* Central Tai Chi Decoration */
.center-taichi {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 180rpx; height: 180rpx;
  border-radius: 50%;
  
  /* Yin Yang Gradient Representation */
  background: linear-gradient(90deg, #333 50%, #f0f0f0 50%);
  border: 6rpx solid var(--color-gold);
  
  box-shadow: 0 0 30rpx rgba(203, 167, 99, 0.4);
  opacity: 0.9;
  z-index: 1;
  
  /* Continuous Rotation Animation */
  animation: spin-slow 20s linear infinite reverse;
}

/* Yin Yang Dots */
.center-taichi::before {
  content: '';
  position: absolute;
  top: 0; left: 50%;
  transform: translateX(-50%);
  width: 90rpx; height: 90rpx;
  background: #f0f0f0;
  border-radius: 50%;
  border: 30rpx solid #f0f0f0; /* Dot color same as background to mask */
  box-sizing: border-box;
  background-clip: content-box;
  background-color: #333; /* The dot itself */
}

.center-taichi::after {
  content: '';
  position: absolute;
  bottom: 0; left: 50%;
  transform: translateX(-50%);
  width: 90rpx; height: 90rpx;
  background: #333;
  border-radius: 50%;
  border: 30rpx solid #333;
  box-sizing: border-box;
  background-clip: content-box;
  background-color: #f0f0f0; 
}

@keyframes spin-slow {
  from { transform: translate(-50%, -50%) rotate(0deg); }
  to { transform: translate(-50%, -50%) rotate(360deg); }
}

/* Decorative Rings */
.ring-outer {
  position: absolute;
  top: -20rpx; left: -20rpx; right: -20rpx; bottom: -20rpx;
  border: 2rpx dashed var(--color-gold);
  border-radius: 50%;
  opacity: 0.3;
  pointer-events: none;
  animation: spin-slow 60s linear infinite;
}

/* Scene Items */
.scene-item {
  position: absolute;
  width: 120rpx;
  height: 160rpx;
  top: 50%; left: 50%;
  margin-left: -60rpx;
  margin-top: -80rpx; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1); /* Snappy transition */
  z-index: 100; /* Ensure items are above everything (rings/taichi) */
  overflow: visible; /* Prevent text clipping */
}

/* Positions matching .scene-select.wxss previously, preserved */
.item-0 { transform: rotate(0deg) translate(0, -220rpx); }
.item-1 { transform: rotate(60deg) translate(0, -220rpx); }
.item-2 { transform: rotate(120deg) translate(0, -220rpx); }
.item-3 { transform: rotate(180deg) translate(0, -220rpx); }
.item-4 { transform: rotate(240deg) translate(0, -220rpx); }
.item-5 { transform: rotate(300deg) translate(0, -220rpx); }

/* Icons & Text */
.icon-container {
  width: 90rpx; 
  height: 90rpx;
  background: rgba(255,255,255,0.8); /* Frosted background for icons */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  transition: all 0.3s;
  border: 2rpx solid rgba(44, 95, 88, 0.1);
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1); /* Subtle shadow for depth */
}

.scene-icon {
  width: 50rpx; height: 50rpx;
  opacity: 0.7;
}

.scene-text {
  display: block;
  font-size: 28rpx;
  color: #ffffff !important; /* Force White for max contrast on Dark Jade */
  font-weight: bold;
  opacity: 1;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.8);
  z-index: 200; 
  white-space: nowrap;
  margin-top: 10rpx;
  background: rgba(0,0,0,0.2); /* Semi-transparent bg to prove bounds */
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

/* Active State */
.scene-item.active .icon-container {
  width: 110rpx; height: 110rpx;
  background: radial-gradient(circle, #fff, #e0e6e4);
  /* Gold Glow */
  box-shadow: 0 0 30rpx var(--color-gold), inset 0 0 20rpx rgba(203, 167, 99, 0.2);
  border: 4rpx solid var(--color-gold);
  transform: scale(1.1);
}

.scene-item.active .scene-icon {
  opacity: 1;
  width: 60rpx; height: 60rpx;
  filter: brightness(1.2); 
}

.scene-item.active .scene-text {
  color: var(--color-gold); /* Gold for active text */
  font-size: 32rpx;
  opacity: 1;
  text-shadow: 0 0 10rpx rgba(44, 95, 88, 0.5); /* Different shadow for gold */
  margin-top: 10rpx;
}

/* Indicator at Top */
.active-indicator {
  position: absolute;
  top: 20rpx; 
  left: 50%;
  margin-left: -12rpx;
  width: 0; 
  height: 0; 
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 20rpx solid var(--color-gold); /* Gold Pointer */
  z-index: 20;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

/* Input Section - Floating Scroll Look */
.input-section {
  background: rgba(255, 255, 255, 0.95); /* Nearly opaque paper */
  width: 90%;
  margin-bottom: 60rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 40rpx 40rpx;
  background: linear-gradient(to top, var(--color-bg), rgba(247, 249, 248, 0.95));
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -10rpx 40rpx rgba(44, 95, 88, 0.05);
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* Ensure it covers enough space */
  min-height: 360rpx;
}

.selected-scene-header {
  margin-bottom: 20rpx;
  display: flex;
  align-items: baseline;
}

.selected-label {
  font-size: 28rpx;
  color: var(--color-ink-light);
}

.selected-name {
  font-size: 36rpx;
  color: var(--color-jade);
  font-weight: bold;
  margin-left: 10rpx;
}

.hint-text {
  font-size: 26rpx;
  color: var(--color-ink-light);
  margin-bottom: 20rpx;
  text-align: center;
  font-style: italic;
  font-family: "Kaiti SC", "STKaiti", serif;
  opacity: 0.8;
}

/* Quick Question Chips */
.chips-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
  width: 100%;
}

.chip {
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(44, 95, 88, 0.2);
  color: var(--color-ink);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  transition: all 0.2s;
}

.chip:active {
  background: var(--color-jade);
  color: #fff;
  transform: scale(0.95);
}

.simple-input {
  width: 100%;
  height: 80rpx;
  background: #f5f7f6;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  text-align: center;
  border: 1rpx solid transparent;
  transition: all 0.3s;
}

.simple-input:focus {
  background: #fff;
  border-color: var(--color-jade);
  box-shadow: 0 0 10rpx rgba(44, 95, 88, 0.1);
}

.confirm-btn {
  width: 100%;
  background: var(--color-jade); /* Use global Jade */
  color: #fff;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  box-shadow: 0 6rpx 16rpx rgba(44, 95, 88, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}
