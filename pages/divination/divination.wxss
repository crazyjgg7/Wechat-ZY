.container {
  padding: 40rpx;
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.hint-area {
  margin-top: 60rpx;
  text-align: center;
  margin-bottom: 60rpx;
  height: 120rpx;
}

.hint-text {
  font-size: 36rpx;
  color: var(--text-main);
  font-weight: 500;
  display: block;
}

.sub-hint {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
  display: block;
}

.lines-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column-reverse; /* Stack from bottom */
  justify-content: center;
  align-items: center;
  gap: 30rpx; /* Space between lines */
  margin-bottom: 60rpx;
  padding: 0 40rpx;
  /* Ensure lines don't overflow */
  max-width: 600rpx;
}

.line-row {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 300rpx;
  height: 48rpx; /* Taller touch targets implicitly though this isn't interactive */
}

.line-label {
  position: absolute;
  left: -60rpx; /* Outside the line */
  font-size: 24rpx;
  color: #D81E06; /* Red for changing lines */
  font-weight: bold;
  width: 40rpx;
  text-align: right;
}

.line {
  width: 100%;
  height: 24rpx; /* Visual height of the line */
  display: flex;
  justify-content: space-between;
}

/* Yin Line Styles */
.line.yin .bar {
  width: 42%;
  height: 100%;
  background-color: #333;
  border-radius: 4rpx;
}
.line.yin .gap {
  width: 16%;
}

/* Yang Line Styles */
.line.yang .bar-full {
  width: 100%;
  height: 100%;
  background-color: #333;
  border-radius: 4rpx;
}

/* Changing lines (6, 9) could also change color if desired, currently handled by label */

.action-area {
  width: 100%;
  padding-bottom: 100rpx;
  display: flex;
  justify-content: center;
}

.action-btn {
  background-color: var(--primary-color);
  color: #fff;
  width: 60%;
  height: 96rpx; /* > 44px touch target */
  border-radius: 48rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(212, 175, 55, 0.3);
  transition: all 0.3s ease;
}

.finish-btn {
  background-color: #1AAD19; /* Green for finish */
  box-shadow: 0 8rpx 16rpx rgba(26, 173, 25, 0.3);
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}
