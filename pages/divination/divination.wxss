.container {
  padding: 40rpx;
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}

.mode-switch {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  padding: 10rpx 20rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 30rpx;
}

.mode-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.hint-area {
  margin-top: 80rpx;
  text-align: center;
  margin-bottom: 60rpx;
  height: 120rpx;
  transition: all 0.3s ease;
}

.hint-text {
  font-size: 36rpx;
  color: var(--text-main);
  font-weight: 500;
  display: block;
}

.sub-hint {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
  display: block;
}

.lines-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column-reverse;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
  max-width: 600rpx;
}

.shaking-anim {
  animation: shake 0.5s infinite;
}

@keyframes shake {
  0% { transform: translate(0, 0); }
  25% { transform: translate(-2rpx, 2rpx); }
  50% { transform: translate(2rpx, -2rpx); }
  75% { transform: translate(-2rpx, -2rpx); }
  100% { transform: translate(0, 0); }
}

.line-row {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 300rpx;
  height: 48rpx;
}

.fade-in {
  animation: fadeIn 0.5s ease-out forwards;
  opacity: 0;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.line-label {
  position: absolute;
  left: -60rpx;
  font-size: 24rpx;
  color: #D81E06;
  font-weight: bold;
  width: 40rpx;
  text-align: right;
}

.line {
  width: 100%;
  height: 24rpx;
  display: flex;
  justify-content: space-between;
}

.line.yin .bar {
  width: 42%;
  height: 100%;
  background-color: #333;
  border-radius: 4rpx;
}
.line.yin .gap {
  width: 16%;
}

.line.yang .bar-full {
  width: 100%;
  height: 100%;
  background-color: #333;
  border-radius: 4rpx;
}

.action-area {
  width: 100%;
  padding-bottom: 100rpx;
  display: flex;
  justify-content: center;
}

.action-btn {
  background-color: var(--primary-color);
  color: #fff;
  width: 60%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(212, 175, 55, 0.3);
  transition: all 0.3s ease;
}

.action-btn[disabled] {
  background-color: #ddd;
  color: #999;
  box-shadow: none;
}

.finish-btn {
  background-color: #1AAD19 !important;
  color: #fff !important;
  box-shadow: 0 8rpx 16rpx rgba(26, 173, 25, 0.3);
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}
