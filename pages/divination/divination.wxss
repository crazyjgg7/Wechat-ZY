/** pages/divination/divination.wxss **/
.container {
  display: flex;
  flex-direction: column;
  background-color: var(--color-mist);
  padding: 0;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* Scene Info Tag (Jade Tablet Style) */
.scene-info {
  background: var(--color-jade);
  color: #fff;
  padding: 10rpx 40rpx;
  border-radius: 0 0 16rpx 16rpx; /* Hanging tag */
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(44, 95, 88, 0.2);
  margin-bottom: 20rpx;
  border: 2rpx solid var(--color-gold);
  border-top: none;
  max-width: 90%;
}

.scene-tag {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
  letter-spacing: 2rpx;
}

.question-text {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

/* Guide Overlay */
/* ... Using global dimming, but content box needs style ... */
.guide-content {
  background: #fff;
  width: 600rpx;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid var(--color-ink);
  position: relative;
}

/* Decorative corner for guide */
.guide-content::after {
  content: '';
  position: absolute;
  top: 10rpx; left: 10rpx; right: 10rpx; bottom: 10rpx;
  border: 1rpx solid var(--color-ink-light);
  border-radius: 8rpx;
  pointer-events: none;
}

.guide-icon {
  font-size: 80rpx;
  margin-bottom: 40rpx;
  color: var(--color-jade);
}

.guide-text {
  font-size: 32rpx;
  color: var(--color-ink);
  text-align: center;
  line-height: 1.8;
  margin-bottom: 60rpx;
}

.guide-btn {
  /* Using Xianxia Button Style Mixin (we'll replicate here as we can't easily import mixins in pure WXSS) */
  background: var(--color-jade);
  color: #fff;
  border: 4rpx double var(--color-gold);
  border-radius: 8rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 76rpx; /* Adjust for border */
  font-weight: bold;
}

/* Mode Switch - Floating Pill */
.mode-switch {
  position: absolute;
  top: 140rpx; /* Below scene info */
  right: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid var(--color-ink-light);
  z-index: 10;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.mode-text {
  font-size: 24rpx;
  color: var(--color-ink);
}

/* Hint Area */
.hint-area {
  margin-top: 40rpx;
  text-align: center;
  height: 120rpx; /* Fixed height to prevent jump */
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hint-text {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--color-jade);
  letter-spacing: 4rpx;
}

.sub-hint, .sub-hint-mode {
  font-size: 24rpx;
  color: var(--color-ink-light);
  margin-top: 8rpx;
}

/* Shake Animation */
@keyframes shake-xianxia {
  0% { transform: rotate(0deg) scale(1); filter: blur(0); }
  25% { transform: rotate(5deg) scale(1.02); filter: blur(0.5px); }
  50% { transform: rotate(0deg) scale(1.05); filter: blur(1px); }
  75% { transform: rotate(-5deg) scale(1.02); filter: blur(0.5px); }
  100% { transform: rotate(0deg) scale(1); filter: blur(0); }
}

.shaking-anim {
  animation: shake-xianxia 0.4s ease-in-out infinite;
}

/* Lines Area - The Hexagram Display */
.lines-area {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column-reverse; /* Bottom to Top */
  gap: 20rpx;
  width: 80%;
}

.line-row {
  display: flex;
  align-items: center;
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.line-wrapper {
  flex: 1;
  height: 48rpx; /* Thicker lines */
  position: relative;
}

/* Yin Yang Lines styling */
.line {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.bar, .bar-full {
  background-color: var(--color-ink);
  height: 100%;
  border-radius: 4rpx;
  /* Ink texture effect (subtle gradient) */
  background-image: linear-gradient(90deg, #333 0%, #444 50%, #333 100%);
}

.bar {
  width: 42%; /* Gap in middle */
}

.bar-full {
  width: 100%;
}

.gap {
  width: 16%;
}

.changing-mark {
  position: absolute;
  right: -40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: var(--color-gold); /* Gold for changing lines */
  font-size: 24rpx;
}

.info-right {
  margin-left: 30rpx;
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coins-display {
  display: flex;
  gap: 4rpx;
  margin-bottom: 4rpx;
}

.coin-icon-small {
  width: 24rpx;
  height: 24rpx;
}

.annotation-text {
  font-size: 24rpx;
  color: var(--color-ink-light);
}

/* Manual Input Area */
.manual-input-area {
  /* ... Existing flex layout ... */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.manual-coins-row {
  display: flex;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.coin-toggle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.toggle-coin-img {
  width: 120rpx;
  height: 120rpx;
  transition: transform 0.3s;
}

.toggle-coin-img:active {
  transform: scale(0.9);
}

.coin-label {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: var(--color-ink);
}

/* Action Area */
.action-area {
  margin-top: auto;
  margin-bottom: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.action-btn {
  /* Tai Chi Button Style again for main action */
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, #3e8e84, var(--color-jade));
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(44, 95, 88, 0.3);
  border: 4rpx solid var(--color-gold);
  
  /* Vertical text */
  writing-mode: vertical-rl;
  text-orientation: upright;
  letter-spacing: 8rpx;
}

.finish-btn {
  background: var(--color-gold); /* Gold button for finish */
  background: radial-gradient(circle at 30% 30%, #e0c586, #CBA763);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(203, 167, 99, 0.4);
}
