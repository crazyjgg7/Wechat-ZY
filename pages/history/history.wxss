/* history.wxss */
.container {
  padding: 20px;
  background-color: var(--color-background);
  min-height: 100vh;
  box-sizing: border-box;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  display: flex;
  background: var(--color-surface);
  margin-bottom: 16px;
  padding: 16px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  align-items: center;
}

.item-left {
  margin-right: 16px;
  width: 50px;
  text-align: center;
}

.hex-symbol {
  font-size: 48px;
  color: var(--color-primary);
  line-height: 1;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 6px;
}

.hex-name {
  font-size: 18px;
  font-weight: bold;
}

.date {
  font-size: 12px;
  color: var(--color-text-secondary);
}

.judgment {
  font-size: 14px;
  color: var(--color-text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 200px; /* Adjust based on screen */
}

.item-right {
  margin-left: 10px;
  color: #ccc;
  font-weight: bold;
}

.empty-state {
  display: flex;
  justify-content: center;
  margin-top: 100px;
  color: var(--color-text-secondary);
}

.actions {
  margin-top: 30px;
  text-align: center;
}

.clear-btn {
  background: none;
  color: #999;
  font-size: 14px;
}
